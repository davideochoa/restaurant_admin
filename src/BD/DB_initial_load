CREATE TABLE ingredient (
    id                  SERIAL PRIMARY KEY,
    name_es             VARCHAR(100) NOT NULL,
    name_en             VARCHAR(100),
    base_unit           VARCHAR(50) NOT NULL,
    unit_cost_eur       DECIMAL(10,2) NOT NULL,
    UNIQUE(name_es, base_unit)
);

