CREATE TABLE product_ingredient_cost (
    id                      SERIAL PRIMARY KEY,
    short_name              VARCHAR(100) NOT NULL,   -- product short name (es or code)
    ingredient_es           VARCHAR(150) NOT NULL,   -- ingredient name in Spanish
    ingredient_en           VARCHAR(150) NOT NULL,   -- ingredient name in English
    base_quantity           DECIMAL(10,2) NOT NULL,
    base_unit               VARCHAR(50) NOT NULL,    -- already bilingual for special units
    unit_cost_eur           DECIMAL(10,2) NOT NULL,
    base_total_cost_eur     DECIMAL(10,2) NOT NULL,
    required_production     INT NOT NULL,
    scaled_quantity         DECIMAL(10,2) NOT NULL,
    scaled_total_cost_eur   DECIMAL(10,2) NOT NULL
);

