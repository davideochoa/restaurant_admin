CREATE TABLE category (
    id          SERIAL PRIMARY KEY,
    name_en     VARCHAR(100) NOT NULL,
    name_es     VARCHAR(100) NOT NULL
);

INSERT INTO category (name_en, name_es) VALUES
    ('Food', 'Alimentos'),
    ('Drinks', 'Bebidas');

CREATE TABLE product_type (
    id          SERIAL PRIMARY KEY,
    code        CHAR(1)      NOT NULL UNIQUE,  -- 'T', 'V', 'B'
    name_en     VARCHAR(100) NOT NULL,
    name_es     VARCHAR(100) NOT NULL
);


INSERT INTO product_type (code, name_en, name_es) VALUES
    ('T', 'Traditional', 'Tradicional'),
    ('V', 'Vegan',       'Vegano'),
    ('B', 'Both',        'Ambos');


CREATE TABLE product (
    id                  SERIAL PRIMARY KEY,
    name_short_es       VARCHAR(100) NOT NULL,
    name_long_es        VARCHAR(200) NOT NULL,
    name_short_en       VARCHAR(100) NOT NULL,
    name_long_en        VARCHAR(200) NOT NULL,
    production_base     INT NOT NULL,
    price_sale_eur      DECIMAL(10,2) NOT NULL
);

